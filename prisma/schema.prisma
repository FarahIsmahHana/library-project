generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String 
  tokens    Token[] // relasi balik
}

model Token {
  id      Int    @id @default(autoincrement())
  token   String
  user_id Int
  user    User   @relation(fields: [user_id], references: [id])
}

model Loan {
  id        Int      @id @default(autoincrement())
  nama      String
  noBuku    String
  judulBuku String
  pengarang String
  tglPinjam DateTime?
  tglKembali DateTime?
  createdAt DateTime @default(now())
  returned  Boolean  @default(false)
}

model Book {
  id        Int      @id @default(autoincrement())
  namaBuku  String
  judulBuku String
  rak       String
  createdAt DateTime @default(now())
}

